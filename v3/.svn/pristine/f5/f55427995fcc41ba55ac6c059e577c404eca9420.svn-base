<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <table id="order" lay-filter="test"></table>
        </div>
    </div>
</div>
<script>
    var verify_param = '';
    var verify_id = getUrlParam('verify');
    if( verify_id != null ){
        $('.layui-nav-item').removeClass('layui-this');
        verify_param += '&verify='+verify_id;
        $('.layui-nav-item').eq(eval(verify_id+'+1')).addClass('layui-this');
    }

    var table = layui.table;
    var form = layui.form;
    var laydate = layui.laydate;
    layui.use('form', function(){
        request.setHost(CENTER_DATA).get('/merchant/shop/all', function(res){
            if( res.code == 0 ){
                var shop = res.data;
                var shop_box_html = '<option value="" >请选择商家</option>';
                for( var shopKey in shop ){
                    shop_box_html += '<option value="'+shop[shopKey].id+'" >'+shop[shopKey].name+'</option>';
                }
                $('#shop_box').html(shop_box_html);
                form.render();
            }
        });
        request.setHost(SHOP_DATA).get('/order/order/getOrderType', function(res){
            if( res.code == 0 ){
                var type = res.data;
                var order_type_html = '<option value="" >全部</option>';
                for( var type_id in type ){
                    order_type_html += '<option value="'+type_id+'" >'+type[type_id].desc+'</option>';
                }
                $('#order_type_box').html(order_type_html);
                form.render();
            }
        });
        request.setHost(SHOP_DATA).get('/order/order/getOrderChannel', function(res){
            if( res.code == 0 ){
                var channel = res.data;
                var order_channel_html = '<option value="" >全部</option>';
                for( var channel_id in channel ){
                    order_channel_html += '<option value="'+channel_id+'" >'+channel[channel_id].desc+'</option>';
                }
                $('#order_channel_box').html(order_channel_html);
                form.render();
            }
        });
        request.setHost(SHOP_DATA).get('/goods/goods_brands/getBrandsAll/',{'limit':'0'}, function(res){
            if( res.code == 0 ){
                var brand_list = res.data;
                var brand_html = '<option value="" >选择品牌</option>';
                for( var b = 0; b < brand_list.length; b++ ){
                    brand_html += '<option value="'+brand_list[b].id+'" >'+brand_list[b].brand_name+'</option>';
                }
                $('#brand_box').html(brand_html);
                form.render();
            }
        });
        form.on('submit', function(data){
            searchData = data.field;
            //上述方法等价于
            table.reload('order', {
                where: searchData,
                page: {
                    curr: 1 //重新从第 1 页开始
                }
            });
            return false;
        });
        form.render();
    });

    laydate.render({
        elem: '#start_time', //指定元素
        type: 'datetime'
    });
    laydate.render({
        elem: '#end_time', //指定元素
        type: 'datetime'
    });
    //执行渲染
    table.render({
        id:'order',
        elem: '#order'
        ,height: 'auto' //容器高度
        ,url: '/order/order/index?'+verify_param
        ,page: true
        ,skin: 'row'
        ,headers: {
            ctrl: SHOP_DATA
        }
        ,cols: [[
            {title: '订单列表',templet: '#orderTpl'}
        ]]
    });

    table.on('tool(test)', function(obj){
        var data = obj.data;
        var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
        var tr = obj.tr; //获得当前行 tr 的DOM对象
        switch(layEvent){
            case 'detail' ://查看订单详情
                var toUrl = "/order/order/detail.html?id="+data.order_id;
                layer.open({
                    title:'订单详情',
                    type:2,
                    shadeClose: true,
                    closeBtn:1,
                    area:['90%','90%'],
                    content:toUrl
                });
                break;
            case 'cancel_order' : //取消订单
                layer.confirm("是否确认取消订单！取消后不可恢复", {
                    btn: ["确定","取消"] //按钮
                }, function(){
                    var param = {};
                    param.order_id = data.order_id;
                    request.setHost(SHOP_DATA).post('/order/order/adminCancelOrder',param, function(res){
                        if (res.code == 0) {
                            layer.msg(res.msg);
                            setTimeout(function(){
                                table.reload('order');
                            },1500);
                        } else {
                            // 错误提示
                            layer.msg(res.msg);
                        }
                    });
                    return false;
                });
                break;
            case 'set_pay' : //设为已支付
                layer.confirm("是否确认设为已支付！", {
                    btn: ["确定","取消"] //按钮
                }, function(){
                    var param = {};
                    param.order_id = data.order_id;
                    param.pay_status = data.pay_status ? 0 : 1;
                    request.setHost(SHOP_DATA).post('/order/order/setOrderPay',param, function(res){
                        if (res.code == 0) {
                            layer.msg(res.msg);
                            setTimeout(function(){
                                table.reload('order');
                            },1500);
                        } else {
                            // 错误提示
                            layer.msg(res.msg);
                        }
                    });
                    return false;
                });
                break;
            case 'set_verify' ://审核订单
                layer.confirm("审核订单", {
                    btn: ["通过","不通过"] //按钮
                }, function(){
                    var param = {};
                    param.order_id = data.order_id;
                    param.verify = 1;
                    if( data.verify != 0 ){
                        layer.prompt({
                            title: '请填写复审备注'
                        }, function(val, index){
                            param.remark = val;
                            setVerify(param);
                            layer.close(index);
                        });
                    }else{
                        setVerify(param);
                    }
                    return true;
                },function(){
                    var param = {};
                    param.order_id = data.order_id;
                    param.verify = 2;
                    if( data.verify != 0 ){
                        layer.prompt({
                            title: '请填写复审备注'
                        }, function(val, index){
                            param.remark = val;
                            setVerify(param);
                            layer.close(index);
                        });
                    }else{
                        setVerify(param);
                    }
                    return true;
                });
                break;
            case 'set_ship' ://发货
                var toUrl = "/order/order/ship_set.html?id="+data.order_id+'&type='+data.order_type;
                layer.open({
                    title:'设置发货信息',
                    type:2,
                    shadeClose: true,
                    closeBtn:1,
                    area:['60%','60%'],
                    content:toUrl
                });
                break;
            case 'set_finished' ://设为已收货（完成订单）
                layer.confirm("是否确认设为已完成（即为已收货）！", {
                    btn: ["确定","取消"] //按钮
                }, function(){
                    var param = {};
                    param.order_id = data.order_id;
                    request.setHost(SHOP_DATA).post('/order/order/setOrderFinished',param, function(res){
                        if (res.code == 0) {
                            layer.msg(res.msg);
                            setTimeout(function(){
                                table.reload('order');
                            },1500);
                        } else {
                            // 错误提示
                            layer.msg(res.msg);
                        }
                    });
                    return false;
                });
                break;
            case 'evalition_detail' : //查看订单评价
                var toUrl = "/goods/evaluation/list.html?order_id="+data.order_id;
                layer.open({
                    title:'用户订单评价',
                    type:2,
                    shadeClose: true,
                    closeBtn:1,
                    area:['90%','90%'],
                    content:toUrl
                });
                break;
            default :
                return false;
                break;
        }
        return false;
    });

    function setVerify(param){
        request.setHost(SHOP_DATA).post('/order/order/orderVerify',param, function(res){
            if (res.code == 0) {
                layer.msg(res.msg);
                setTimeout(function(){
                    table.reload('order');
                },1500);
            } else {
                // 错误提示
                layer.msg(res.msg);
            }
        });
    }

    function callback(){
        table.reload('order');
        layer.closeAll();
    }
</script>

