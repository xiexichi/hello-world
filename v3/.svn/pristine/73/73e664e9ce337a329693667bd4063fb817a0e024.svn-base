<div class="layui-card">
    <div class="layui-card-body">
        <table id="brands" lay-filter="test"></table>
    </div>
</div>
<script>
    $(document).ready(function(){
        loadlist();
    });
    function loadlist(){
        var table = layui.table;
        //执行渲染
        table.render({
            elem: '#brands' //
            ,height: 'auto' //容器高度
            ,url: '/goods/goods_brands/getBrandsAll'
            ,page: true
            , toolbar: '<div>' +
                '<button class="layui-btn layui-btn-sm layui-btn-primary" onclick="add()">添加品牌'+
                '</button>' +
                '</div>'
            ,headers: {
                ctrl: SHOP_DATA
            }
            ,cols: [[
                {field: 'id', title: 'ID', width:80}
                ,{field: 'brand_name', title: '品牌名', width:500}
                ,{field: 'sort', title: '排序', width:100}
                ,{field: 'id', title: '操作', width:200, templet: '#ctrlTpl'}
            ]]
        });
    }
    function add(){
        var toUrl = "/goods/brands/add.html";
        layer.open({
            title:'添加品牌',
            type:2,
            shadeClose: true,
            closeBtn:1,
            area:['100%','100%'],
            content:toUrl
        })
    }
    function detail(id){
        var toUrl = "/goods/brands/detail.html?id="+id;
        layer.open({
            title:'品牌详情',
            type:2,
            shadeClose: true,
            closeBtn:1,
            area:['100%','100%'],
            content:toUrl
        })
    }

    function deleted(id){
        layer.confirm("是否确认删除！", {
            btn: ["确定","取消"] //按钮
        }, function(){
            var param = {};
            param.id = id;
            param.is_deleted = 1;
            request.setHost(SHOP_DATA).post('/goods/goods_brands/deleted',param, function(res){
                if (res.code == 0) {
                    // 成功提示
                    layer.msg(res.msg);
                    setTimeout(function(){
                        loadlist();
                    },1000);
                } else {
                    // 错误提示
                    layer.msg(res.msg);
                }
            });
        });
        return false;
    }
    function callback(){
        loadlist();
        layer.closeAll();
    }
</script>

<!-- 操作模板 -->
<script type="text/html" id="ctrlTpl">
    <a href="javascript:void(0);" onclick="detail({{d.id}})" class="layui-table-link">详情</a>
    <a href="javascript:void(0);" onclick="deleted({{d.id}})" class="layui-table-link">删除</a>
</script>
