<div class="p-1" id="app">
	<form class="layui-form layui-form-pane" id="openAddForm" lay-filter="layer">
		<div class="layui-form-item">
			<label class="layui-form-label">第三方应用</label>
			<div class="layui-input-block">
				<select name="third_app_id">
          <option value="">选择关联应用</option>
          <option :value="item.id" v-for="(item, key) in apps" :key="key" v-bind:selected="item.id==row.third_app_id">{{item.name}}</option>
        </select>
			</div>
		</div>
    <div class="layui-form-item" pane>
      <label class="layui-form-label">二唯码类型</label>
      <div class="layui-input-block">
        <input type="radio" name="sex" value="B" title="临时小程序码" checked>
        <input type="radio" name="sex" value="A" title="永久小程序码">
        <input type="radio" name="sex" value="C" title="永久小程序二唯码">
      </div>
    </div>
    <div class="layui-form-item">
      <label class="layui-form-label">二唯码内容</label>
      <div class="layui-input-block">
        <input type="text" name="url" placeholder="请输入二唯码内容" class="layui-input" required lay-verify="required" v-model="row.url">
      </div>
    </div>
    <div class="layui-form-item" pane v-if="! id">
      <label class="layui-form-label">保存记录</label>
      <div class="layui-input-inline" style="width:auto">
        <input type="checkbox" name="savatolist" lay-skin="switch" lay-text="是|否" value="1">
      </div>
      <div class="layui-form-mid layui-word-aux">是否将此次生成码保存列表中</div>
    </div>
		<div class="layui-form-item">
			<label class="layui-form-label">描述</label>
			<div class="layui-input-block">
				<textarea name="desc" placeholder="后台描述内容" class="layui-textarea" v-model="row.desc"></textarea>
			</div>
		</div>
		<div class="layui-form-item">
			<div class="layui-input-block">
				<input type="hidden" name="id" v-if="id" v-model="id">
				<button class="layui-btn" lay-submit lay-filter="edit-layer">立即提交</button>
			</div>
		</div>
	</form>
</div>

<hea:js src="/static/js/vue.js" />
<script type="text/javascript">
const id = getUrlParam('id')
var app = new Vue({
  el: '#app',
  data: {
  	id: id,
    apps: [],
    row: {}
  },
  mounted: function () {
    if (id && id != 0) this.getOne()
    this.getThirdApps()
  },
  watch: {
    apps: function (newQuestion, oldQuestion) {
      setTimeout(function () {
        // 刷新表单控件
        layui.form.render('select')
      }, 500)
    }
  },
  methods: {
  	// 获取数据
  	getOne: function() {
  		let _this = this
  		_this.id = id
  		request.setHost('center_data').get('/picshow/qrcode/one?id='+id, function (json) {
  			if (json.code === 0) {
          _this.row = json.data
  			} else {
  				layer.alert(json.msg)
  			}
  		})
  	},
    // 获取apps列表
    getThirdApps: function () {
      let _this = this
      request.setHost('center_data').get('/picshow/qrcode/getThirdApps', function(json) {
        if (json.code === 0) {
          _this.apps = json.data
        }else{
          layui.alert(json.msg)
        }
      })
    }
  }
})

// layui
layui.use('form', function () {
  const form = layui.form
  form.render()

  //监听添加层提交
  form.on('submit(edit-layer)', function (data) {
  	const loadLayer = layer.load()
  	let url = '/picshow/qrcode/add'
  	if (id && id !=0){
  		url = '/picshow/qrcode/edit'
  	}
    request.setHost('center_data').post(url, data.field, function (json){
    	if (json.code === 0) {
    		layer.msg(json.msg, {
    			icon: 1,
    			time: 2000
    		}, function () {
    			// 刷新父页面
    			parent.location.reload()
    		})
    	}else{
	    	layer.close(loadLayer)
    		layer.alert(json.msg, function (index) {
    			layer.close(index)
    		})
    	}
    })
    return false
  })

})
</script>