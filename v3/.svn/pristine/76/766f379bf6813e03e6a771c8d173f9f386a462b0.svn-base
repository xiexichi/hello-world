function sales(id,sales_status,is_deleted){
    if( is_deleted == 1 ){
        layer.msg('已删除商品必须先恢复才能操作');
        return false;
    }
    var param = {};
    var msg = "是否确认下架！";
    param.id = id;
    param.sales_status = sales_status ? 0 : 1;
    if( param.sales_status == 1 ){
        msg = "是否确认上架！";
    }
    layer.confirm(msg, {
        btn: ["确定","取消"] //按钮
    }, function(){
        request.setHost(SHOP_DATA).post('/goods/goods/edit',param, function(res){
            if (res.code == 0) {
                // 成功提示
                layer.msg(res.msg);
                setTimeout(function(){
                    loadlist();
                },1000);
            } else {
                // 错误提示
                layer.msg(res.msg);
            }
        });
    });
    return false;
}

function deleted(id,is_deleted){
    var param = {};
    var msg = "是否确认恢复！恢复后商品默认下架！";
    param.id = id;
    param.is_deleted = is_deleted ? 0 : 1;
    if( param.is_deleted == 1 ){
        param.sales_status = 0;
        msg = "是否确认删除！删除后相关商品关联将取消！";
    }
    layer.confirm(msg, {
        btn: ["确定","取消"] //按钮
    }, function(){
        request.setHost(SHOP_DATA).post('/goods/goods/edit',param, function(res){
            if (res.code == 0) {
                // 成功提示
                layer.msg(res.msg);
                setTimeout(function(){
                    loadlist();
                },1000);
            } else {
                // 错误提示
                layer.msg(res.msg);
            }
        });
    });
    return false;
}
