    layer.open({
        type: 2,
        title : '选择图片',
        content: photoSpaceUrl,
        shadeClose: true,
        area: ['80%', '80%'],
        success: function(layero){
            layer.setTop(layero);
        }
    })
}

/**
 * 选择图片方法
 * 从handlePhoto.html文件自动发起调用
 * JSON content
 */
function handlePhoto(content){
    if(content == 'close'){
        // 关闭窗口
        layer.closeAll();
    }else{
        var json = JSON.parse(content);
        // 业务处理
        if( json.length == 0 ){
            layer.msg('请选择图片');
            return false
        }
        if( Vue.upload_obj != 'goods_content' && json.length > 1 ){
            layer.msg('只能选择一张图片哦');
            return false
        }
        if( !Vue.uploadImgBack(json) ){
            layer.msg('图片处理脚本出错');
        }
        layer.closeAll();
    }
}
