if( !function_exists('execBeforeMethods') )
{
    function execBeforeMethods(&$obj, $query, $methodName) {

        // pe($query);

        $method = $methodName . 'Before';

        if (objHasMethod($obj, $method)) {

            $query = $obj->$method($query);
        }


        return $query;
    }
}


