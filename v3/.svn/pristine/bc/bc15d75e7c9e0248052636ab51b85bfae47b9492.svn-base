/**
 * 生成随机字符串
 */
if(!function_exists('makeRandStr'))
{
	function makeRandStr($length = 6){
		$codeSet = '2345678abcdefhjkmnpqrtwxyz';
		$code = '';
		for ($i = 0; $i < $length; $i++) {
			$code .= $codeSet[mt_rand(0, strlen($codeSet) - 1)];
		}
		return $code;
	}
}
