html,body{overflow:hidden;height:100%;width:100%;}
.receiving {
  height:100%;width:100%;padding:0 10px;box-sizing:border-box;
  &-main{
    height:calc(100vh - 215px);padding:0;
    .retrial-input{width:90px;}
  }
  &-footer{
    background:#DCDFE6;width:100%;position:fixed;left:0;bottom:0;box-sizing:border-box;z-index:9;padding-right:0;font-size:14px;
    &-bar{
      background-color:#F2F6FC;display:flex;justify-content:space-between;align-items:center;padding:10px 20px;color:#909399;border-top:1px solid #eee;
    }
    .input-receiving{height:78px;font-size:26px;}
    .input-users{padding-left:48px;border-bottom:none;}
    .table-total{margin: 0;}
    .table-total th{text-align:center;width:33%;color:#999;}
    .table-total td{text-align:center;width:33%;color:#000;font-size:22px;}
    .alert-activitys{
      padding-left: 30px;
      li{list-style: disc;}
    }
    .btn-receiving{height:78px;width:100%;font-size:32px;}
    .btn-search{position:absolute;right:0;top:16px;height:76px;line-height:16px;font-size:12px;border:none;background:#eee;width:34px;padding:0 10px;}
    .layui-icon-username{position:absolute;left:15px;top:5px;font-size:22px;color:#999;}
  }
  &-area{
    padding:15px 20px;
  }
  &-user{
    background-color:#ddd;text-align:center;
    &-input input{border:none;border-radius:0;}
    &-item{padding:10px 0;background-color:#fff;}
  }
}