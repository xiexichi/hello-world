<import src="../common/footer.wxml" />

<view class="container">

  <view class="page-body">

  		<view class="avatar jbc" style="width:{{windowWidth}}px;height:{{windowWidth*0.8}}px">
  			<image src="{{user.image_url}}" style="width:{{windowWidth*0.6}}px;height:{{windowWidth*0.6}}px"></image>
  		</view>

  		<view class="avatar-btn">
  			<button type="primary" bindtap="uploadAvatar">上传图片</button>
  			<view class="blank20"></view>
  			<button type="dufault" bindtap="back">返回</button>
  		</view>

  </view>

  <template is="footer" data="{{data:footerData,showHomeBtn:showHomeBtn}}" />
</view>
