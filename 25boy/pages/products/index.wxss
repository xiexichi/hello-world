page{padding-bottom:60px;}

/*轮播图*/
.photosList swiper{height:750rpx;}
.swiper-item{
    display: block;
    width:100%;
}
.slide-image{width:100%;height:750rpx;display:block;}

.baseInfo{padding:20rpx;position:relative;}
.baseInfo text{display:block;}
.product_name{font-size:40rpx;font-weight:700;}
.priceView{line-height:1.3em;padding:5px 0;}
.baseInfo .discount_tag{display:inline-block;font-size:26rpx;color:#999;margin-right:10rpx;}
.baseInfo .product_price{font-size:46rpx;font-weight:700;color:#b01f23;display:inline-block;}
.baseInfo .market_price{font-size:30rpx;font-weight:0;color:#999;display:inline-block;text-decoration:line-through;margin-left:20rpx;}
.baseInfo .recharge_price{font-size:32rpx;font-weight:0;color:#b01f23;display:block;}
.miao_end_date{font-size:30rpx;color:#b01f23;}
.delivery_desc{font-size:26rpx;color:#666;margin-bottom:10rpx}
.delivery_desc-icon{position:relative;top:-2px;margin-right:2px;}

.goLink{padding:0rpx 20rpx 20rpx 20rpx;display:flex;justify-content:space-around;}
.goLink-item{border:1px solid #ddd;border-radius:10rpx;background-color:#fff;color:#444;font-size:32rpx;width:332rpx;text-align:center;line-height:70rpx;}

.selectProp{position:relative;padding:20rpx;font-size:30rpx;color:#333;line-height:40rpx;background-color:#f8f8f8;}

.specification{padding:20rpx;}
.specification .title{text-align:center;font-size:36rpx;padding:20rpx;}
.specification text{font-size:28rpx;}
.specification .img-box image{height:130rpx;}
.specification .flex-wrp.weui-grids:before{border-top:none;}

.colorsize{height:585px;padding:20rpx;}
.colorsize image{width:750px;height:550px;}
.colorsize .tips{color:#999;font-size:26rpx;margin-top:10px;position:relative;padding-left:18px;}
.colorsize .tips icon{position:absolute;left:0;top:-1.5px;}

.productdetail{padding:10px;}
.productdetail image{height:600rpx;}

/*弹出层*/
.propModal{background:#fff;padding:20rpx;}
.propModal .propInfo{position:relative;padding-left:240rpx;padding-bottom:30rpx;border-bottom:1px solid #ddd;}
.propModal .colorImg{width:200rpx;height:200rpx;border-radius:6px;border:1px solid #eee;padding:2px;position:absolute;top:-70rpx;left:0;background:#fff;display:none;}
.show .colorImg{display:block;}
.propModal .propInfo text{display:block;color:#000;font-size:28rpx;line-height:46rpx;}
.propModal .propInfo .propPrice{color:#b01f23;font-weight:700;font-size:36rpx;}
.propModal .dl{padding:20rpx 10rpx;font-size:28rpx;line-height:30rpx;margin:20rpx 0;}
.propModal .dt{color:#000;}
.propModal .dd text{margin-right:20rpx;display:inline-block;margin-top:20rpx;padding:0 18rpx;border:1px solid #ddd;border-radius:4px;padding:5px 8px;}
.propModal .dd .text-hover{border-color:#b01f23 ;color:#fff;background-color:#b01f23;}
.propModal .quantityBox{border-top:1px solid #ddd;padding-top:40rpx;margin-bottom:30rpx;}
.propModal .quantityBox-dd{margin-top:20rpx;}
.propModal .quantityBox-cut,
.propModal .quantityBox-plus{height:60rpx;line-height:60rpx;padding:0 26rpx;}
.propModal .quantityBox-num{display:inline-block;border:1px solid #ddd;padding:0 5px;width:70rpx;text-align:center;min-height:56rpx;height:56rpx;line-height:56rpx;}

/*底部栏*/
.productBottom{position:fixed;bottom:0;left:0;width:100%;background:#f2f2f2;padding:20rpx 0;height:80rpx;}
.productBottom-nav{display:flex;width:45%;font-size:26rpx;text-align:center;justify-content:space-around;align-items:center;padding:0 1%;}
.productBottom-nav image{width:22px;height:22px;display:block;margin:auto;margin-bottom:5px;}
.productBottom-item{position:relative;}
.productBottom-btn{width:50%;}
.productBottom-btn button{margin-right:20rpx;font-size:17px;}
.productBottom-contact{background-color:transparent;border-color:transparent !important;line-height:1.5em;font-size:26rpx;box-shadow:none;}

/* 推广图标 */
.share-tui-icon{position:absolute;width:58rpx;height:58rpx;right:30rpx;top:100rpx;}
.promoteLayer{background:#fff;}
.share-inbox{padding:20rpx 30rpx;}
.share-button{margin-top:20rpx;margin-right:10rpx;}
.share-text{color:#000;display:block;font-size:34rpx;}
.share-logintip{background:#fcf8e3;color:#8a6d3b;padding:15rpx 20rpx;font-size:26rpx;border-radius:12rpx;margin-bottom:10rpx;line-height:36rpx;}
.share-photos{margin-top:20rpx;display:flex;}
.share-productImg{width:210rpx;height:370rpx;margin-right:10rpx;}
.share-redpackImg{width:420rpx;height:370rpx;}
.share-instro{background:#f2f2f2;border-top:1px solid #ddd;padding:20rpx 30rpx;color:#999;font-size:12px;}
.share-instro-text{display:block;font-size:28rpx;color:#999;line-height:36rpx;text-indent:-1em;padding-left:1em;}
.share-moreLink{color:#337ab7;margin:10rpx 0;padding-left:1em;}

.weui-grid{padding:8px 10px;}
.cart-badge{position:absolute;top:-.4em;right:-.4em;}

/* 套餐 */
.combomeal-view{padding-bottom:30rpx;}
.combomeal-hd{font-size:30rpx;color:#000;padding-left:30rpx;line-height:80rpx;}
.scroll-view{white-space: nowrap;flex-wrap:nowrap;height:220rpx;}
.scroll-view-item_H{width: 600rpx;height:220rpx;display:inline-flex;margin-left:30rpx;}
.combomeal-item-left {width:220rpx;}
.combomeal-item-right{width:380rpx; height:100%;}
.combomeal-item-right-navigator{width:100%;height:100%;flex-direction:column;background:#f2f2f2;justify-content:center;white-space:pre-wrap;text-indent:15rpx;line-height:50rpx;}
.croll-view-item_H-image {width:220rpx;height:220rpx;display:block;}
.combomeal-item-right-dt {width:100%;font-size: 30rpx;}
.combomeal-item-right-dd {width:100%;font-size: 27rpx;color:#999;}
.combomeal-item-right-price {color:red;}
