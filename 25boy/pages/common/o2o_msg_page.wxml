<template name="msg_page">
	<view class="weui-msg">
	    <view class="weui-msg__icon-area">
	    	<icon type="{{type}}" size="100" />
	    </view>
	    <view class="weui-msg__text-area">
	        <text class="weui-msg__title">{{title}}</text>
	        <text class="weui-msg__desc">{{content}}</text>
	    </view>
	    <view class="weui-msg__opr-area">
	        <view class="weui-btn-area">
	            <navigator wx:if="{{confirmUrl}}" url="{{confirmUrl}}" open-type="{{confirmOpenType}}"><button type="primary">{{confirmText}}</button></navigator>
	            <navigator wx:if="{{cancelUrl}}" url="{{cancelUrl}}" open-type="{{cancelOpenType}}"><button type="default">{{cancelText}}</button></navigator>
	        </view>
	    </view>
	</view>
</template>