.share-doLikeBtn{padding:50rpx;position:relative;}
.share-doLikeBtn-button{margin-top:20rpx;}

.popover {position: absolute; top:80rpx; left:145rpx; padding: 1px; border: 1px solid #ddd; border-radius:6px; box-shadow: 0 2px 8px rgba(0,0,0,.2); background:#fff;width:460rpx;text-align:center;z-index:9;display:none;}
.popover-content {padding:20rpx 30rpx;}
.popover > .arrow, .popover > .arrow:after {position: absolute; display: block; width: 0; height: 0; border-color: transparent; border-style: solid;}
.popover > .arrow:after {border-width: 10px; content: "";}
.popover > .arrow {position: absolute; display: block; width: 0; height: 0; border-color: transparent; border-style: solid;border-width: 11px; margin-left: -11px; border-bottom-width: 0; border-top-color: #ffffff; left:50%; bottom: -11px; }


/* 分享提示层 */
.shareFxTap{position:fixed;top:-2px;right:20px;}
.shareFxTap-dot {
  animation: sploosh 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
}
.shareFxTap-dot2 {
  animation: sploosh2 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
}
.shareFxTap-dot3 {
  animation: sploosh3 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
}
.shareFxTap-dot,.shareFxTap-dot2,.shareFxTap-dot3{
  height:2px;
  width: 2px;
  color: #fff;
  text-align: center;
  border-radius: 100%;
  position: absolute;
  z-index: 10;
  animation-iteration-count:infinite;
  background: transparent;
}
@keyframes sploosh {
  0% {
    box-shadow: 0 0 0 0px rgba(39,37,106, 0.7);
    background: rgba(39,37,106, 0.5);
  }
  100% {
    box-shadow: 0 0 0 80px rgba(39,37,106, 0);
    background: rgba(39,37,106, 0);
  }
}
@keyframes sploosh2 {
  0% {
    box-shadow: 0 0 0 0px rgba(39,37,106, 0.7);
    background: rgba(39,37,106, 0.1);
  }
  100% {
    box-shadow: 0 0 0 50px rgba(39,37,106, 0);
    /*background: rgba(39,37,106, 0.3);*/
  }
}
@keyframes sploosh3 {
  0% {
    box-shadow: 0 0 0 0px rgba(39,37,106, 0.7);
    background: rgba(39,37,106, 0.1);
  }
  100% {
    box-shadow: 0 0 0 20px rgba(39,37,106, 0);
    /*background: rgba(39,37,106, 1);*/
  }
}


