page{background-color:#f2f2f2;}
.addshare-textarea{padding:30rpx;font-size:32rpx;background-color:#fff;margin-bottom:30rpx;}
.addshare-photos{padding:0 30rpx;display:flex;flex-wrap:wrap;}
.addshare-img{width:149rpx;height:149rpx;display:block;}
.addshare-upbtn{width:149rpx;height:149rpx;border:1px solid #ddd;display:flex;background-color:#fff;align-items:center;flex-wrap:wrap;justify-content:center;margin-bottom:20rpx;}
.addshare-addImgBtn{width:70rpx;height:70rpx;margin:0 auto;padding-top:10rpx;}
.addshare-addImgTxt{text-align:center;font-size:26rpx;color:#999;padding-bottom:10rpx;}
.addshare-tip{font-size:26rpx;color:#999;padding:0 30rpx;}
.addshare-item{position:relative;margin-right:20rpx;margin-bottom:20rpx;border:1px solid #ddd;}
.addshare-item-icon{position:absolute;top:-12px;right:-12px;background-color:rgba(255,255,255,0.8);border-radius:50%;}

.addshare-btn{padding:30rpx;margin-top:50rpx;}