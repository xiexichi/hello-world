<import src="../common/footer.wxml" />

<view class="container">

  <view class="page-body">

	<!-- <view class="weui-navbar">
		<view bindtap="switchNavbar" data-type="phone" class="weui-navbar__item {{navbarClassPhone}}">手机找回</view>
		<view bindtap="switchNavbar" data-type="email" class="weui-navbar__item {{navbarClassEmail}}">邮箱找回</view>
