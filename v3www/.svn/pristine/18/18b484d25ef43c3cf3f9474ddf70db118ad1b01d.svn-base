.empty {
    position: relative;
    display: block;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
    overflow: hidden
}
.empty__box {
    position: absolute;
    display: flex;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    flex-direction: column;
    justify-content: center;
    align-items: center
}
.empty__btn {
    min-width: 228rpx;
    margin-top: 30rpx;
}
.empty__icon {
    text-align:center;
    font-size:300rpx;
    color:#999999;
}
.empty__text {
    margin-top: 30rpx;
    color: #666;
    font-size: 32rpx
}
.empty__tip {
    margin-top: 20rpx;
    color: #999;
    font-size: 28rpx
}