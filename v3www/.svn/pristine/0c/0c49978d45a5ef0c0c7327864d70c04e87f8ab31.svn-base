/* images upload default style */
#upload_main .upload_box{ display:block; margin:10px; width:180px; min-width:180px; padding:6px; background:none; overflow:hidden; font-size:12px; border:1px solid #ccc; border-radius:8px; }
#upload_main .upload_box .upload-title{width:90%; margin:5px auto; height:15px; line-height:15px; font-size:14px; text-align:center; color:#000000; overflow:hidden; }
#upload_main .upload_box .upload-tips{width:90%; margin:5px auto; height:15px;  line-height:15px; font-size:14px; text-align:center; color:#BEBEBE; overflow:hidden; }
#upload_main .upload_box .upload-view{ width:90%; margin:5px auto; height:150px; min-height:80px; min-width:150px; background:url('../images/upload_add.png') no-repeat center center; background-size:90% 90%; border:1px solid #ccc; border-radius:8px; }
#upload_main .upload_box .upload-view img{display:block; float:left; width:100%; height:100%; }
#upload_main .upload_box .upload-tips{width:90%; margin:5px auto; height:15px; font-size:14px; text-align:center; color:#BEBEBE; overflow:hidden; }
#upload_main .upload-del-box{width:100%; text-align:center; margin:5px 0; overflow:hidden; }
#upload_main .upload-del-box a{ color:#000; }
#upload_mian .clear{clear:both;}
